---
import { getLangFromUrl, useTranslations } from '../../i18n/utils.js';
import LanguageSwitcher from '../../components/LanguageSwitcher.astro';
import Analytics from '../../components/Analytics.astro';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<html lang={lang}>
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/x-icon" href="/favicon.ico" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<meta name="generator" content={Astro.generator} />
		<title>{t('terms.title')} - Telesub</title>
		<meta name="description" content={t('terms.meta')} />
		
		<style>
			* {
				margin: 0;
				padding: 0;
				box-sizing: border-box;
			}

			body {
				font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
				line-height: 1.6;
				color: #334155;
				overflow-x: hidden;
			}

			.bg-white {
				background-color: white;
			}

			.relative {
				position: relative;
			}

			.min-h-screen {
				min-height: 100vh;
			}

			.overflow-hidden {
				overflow: hidden;
			}

			/* Background Gradient */
			.background-gradient {
				position: fixed;
				top: 0;
				left: 0;
				right: 0;
				bottom: 0;
				background: linear-gradient(135deg, #e0f2fe 0%, #f0f9ff 25%, #f3e8ff 50%, #e9d5ff 75%, #f0f9ff 100%);
				opacity: 0.6;
				z-index: 0;
			}

			.background-gradient::before {
				content: '';
				position: absolute;
				top: 0;
				left: 0;
				right: 0;
				bottom: 0;
				background-image: 
					radial-gradient(circle at 25% 25%, rgba(59, 130, 246, 0.1) 0%, transparent 50%),
					radial-gradient(circle at 75% 75%, rgba(139, 92, 246, 0.1) 0%, transparent 50%);
			}

			.z-10 {
				position: relative;
				z-index: 10;
			}

			/* Container */
			.container {
				max-width: 1000px;
				margin: 0 auto;
				padding: 0 1rem;
			}

			/* Header */
			header {
				padding: 1.5rem 0;
			}

			nav {
				display: flex;
				align-items: center;
				justify-content: space-between;
			}

			.logo {
				display: flex;
				align-items: center;
				font-size: 1.5rem;
				font-weight: bold;
				color: #019aff;
				text-decoration: none;
			}

			.logo-icon {
				width: 100px;
				margin-right: 0.5rem;
				object-fit: contain;
			}

			.nav-buttons {
				display: flex;
				align-items: center;
				gap: 1rem;
			}

			.btn-signin {
				color: #475569;
				font-weight: 500;
				text-decoration: none;
				transition: color 0.3s ease;
				font-size: 0.875rem;
			}

			.btn-signin:hover {
				color: #019aff;
			}

			.btn-primary {
				background: #019aff;
				color: white;
				padding: 0.4rem 1.2rem;
				border-radius: 9999px;
				font-weight: 500;
				text-decoration: none;
				transition: all 0.3s ease;
				font-size: 0.875rem;
			}

			.btn-primary:hover {
				background: #0284c7;
				transform: translateY(-1px);
			}

			/* Main Content */
			.main-content {
				padding: 2rem 0 5rem 0;
			}

			.page-title {
				text-align: center;
				margin-bottom: 3rem;
			}

			.page-title h1 {
				font-size: 2.5rem;
				font-weight: bold;
				color: #1e293b;
				margin-bottom: 0.5rem;
			}

			.page-title p {
				color: #64748b;
				font-size: 1rem;
			}

			.content-card {
				background: rgba(255, 255, 255, 0.8);
				backdrop-filter: blur(10px);
				border: 1px solid rgba(255, 255, 255, 0.2);
				border-radius: 1.5rem;
				padding: 3rem;
				box-shadow: 0 25px 50px rgba(0, 0, 0, 0.1);
			}

			.content-intro {
				color: #374151;
				margin-bottom: 2rem;
				font-size: 1.125rem;
				line-height: 1.7;
			}

			.content-section {
				margin-bottom: 2.5rem;
			}

			.content-section h2 {
				font-size: 1.5rem;
				font-weight: 600;
				color: #1e293b;
				margin-bottom: 1rem;
			}

			.content-section p {
				color: #374151;
				margin-bottom: 1rem;
				line-height: 1.7;
			}

			.content-section ul {
				list-style-type: disc;
				padding-left: 1.5rem;
				margin-bottom: 1rem;
			}

			.content-section li {
				color: #374151;
				margin-bottom: 0.5rem;
				line-height: 1.7;
			}

			.contact-section {
				margin-top: 3rem;
				padding-top: 2rem;
				border-top: 1px solid rgba(226, 232, 240, 0.5);
				text-align: center;
			}

			.contact-section p {
				color: #64748b;
				font-size: 0.875rem;
			}

			.contact-section a {
				color: #019aff;
				text-decoration: none;
			}

			.contact-section a:hover {
				text-decoration: underline;
			}

			/* Language Switcher Mobile/Desktop Control */
			.mobile-lang-switcher {
				display: none;
				justify-content: center;
				margin-bottom: 1rem;
			}

			.desktop-lang-switcher {
				display: flex;
			}

			/* Responsive */
			@media (max-width: 768px) {
				.desktop-lang-switcher {
					display: none;
				}

				.mobile-lang-switcher {
					display: flex;
				}

				.page-title h1 {
					font-size: 2rem;
				}

				.content-card {
					padding: 2rem;
				}

				.nav-buttons {
					gap: 0.5rem;
				}

				.btn-primary {
					padding: 0.375rem 1rem;
					font-size: 0.875rem;
				}
			}
		</style>
	</head>
	<body class="relative min-h-screen bg-white">
		<div class="background-gradient"></div>
		<div class="z-10">
			<!-- Header -->
			<header>
				<div class="container">
					<nav>
						<a href="/en" class="logo">
							<img src="/blue-logo.png" alt="Telesub logo" class="logo-icon" />
						</a>
						<div class="nav-buttons">
							<div class="desktop-lang-switcher">
								<LanguageSwitcher />
							</div>
							<a href="/en/signin" class="btn-signin">{t('nav.signin')}</a>
							<a href="/en/signup" class="btn-primary">{t('nav.signup')}</a>
						</div>
					</nav>
				</div>
			</header>

			<!-- Main Content -->
			<main class="main-content">
				<div class="container">
					<div class="page-title">
						<h1>{t('terms.title')}</h1>
						<p>{t('page.updated')} {new Date().toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' })}</p>
					</div>

					<div class="content-card">
						<div class="content-intro">
							By using our platform, you agree to the following terms. If you do not agree, please do not use the Service.
						</div>

						<div class="content-section">
							<h2>1. Description of the Service</h2>
							<p>
								Our platform allows admin users to create and manage Telegram groups and approve subscription requests from subscriber users.
							</p>
							<p>
								Subscriber users can request to join groups without needing to create an account.
							</p>
							<p>
								This Service is free to use and does not collect sensitive personal information.
							</p>
						</div>

						<div class="content-section">
							<h2>2. User Responsibilities</h2>
							<p>
								Admin users are solely responsible for the groups they create and manage.
							</p>
							<p>
								Groups must be related to legal and acceptable topics, such as entertainment, sports, etc.
							</p>
							<p>
								Any group that promotes, shares, or encourages illegal, harmful, or internet-forbidden content will be immediately banned.
							</p>
							<p>
								The admin user who created the group is fully responsible for its content.
							</p>
						</div>

						<div class="content-section">
							<h2>3. Prohibited Content</h2>
							<p>You may not use the Service to:</p>
							<ul>
								<li>Distribute or promote illegal content (e.g., explicit, pirated, or violent material)</li>
								<li>Violate the rights of others</li>
								<li>Spam or misuse group invitations</li>
							</ul>
						</div>

						<div class="content-section">
							<h2>4. Termination</h2>
							<p>
								We reserve the right to remove any group or block access to users who violate these terms at any time, without prior notice.
							</p>
						</div>

						<div class="content-section">
							<h2>5. Disclaimer</h2>
							<p>
								This Service is provided "as is" with no warranties. We are not responsible for the content of any group or user interactions.
							</p>
						</div>

						<div class="content-section">
							<h2>6. Changes</h2>
							<p>
								We may update these Terms and Conditions at any time. Continued use of the Service means you accept the updated terms.
							</p>
						</div>

						<div class="contact-section">
							<p>If you have any questions about these Terms and Conditions, please contact us at <a href="mailto:support@telesub.app">support@telesub.app</a></p>
						</div>
					</div>
				</div>
			</main>

			<!-- Footer -->
			<footer style="border-top: 1px solid rgba(226, 232, 240, 0.5); padding: 2rem 0; margin-top: 3rem;">
				<div class="container">
					<div style="border-top: 1px solid rgba(226, 232, 240, 0.5); padding-top: 2rem; text-align: center; color: #64748b; font-size: 0.875rem;">
						<div class="mobile-lang-switcher">
							<LanguageSwitcher />
						</div>
						<div style="display: flex; align-items: center; justify-content: center; gap: 1rem; margin-bottom: 1rem;">
							<a href="/en/privacy" style="color: #64748b; text-decoration: none; font-size: 0.875rem; transition: color 0.3s ease;">{t('footer.links.privacy')}</a>
							<span style="color: #94a3b8;">â€¢</span>
							<a href="/en/terms" style="color: #64748b; text-decoration: none; font-size: 0.875rem; transition: color 0.3s ease;">{t('footer.links.terms')}</a>
						</div>
						<p>{t('footer.copyright')}</p>
					</div>
				</div>
			</footer>
		</div>
		
		<Analytics />
	</body>
</html> 