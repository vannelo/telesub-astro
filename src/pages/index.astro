---
import { getLangFromUrl, useTranslations } from '../i18n/utils.js';
import LanguageSwitcher from '../components/LanguageSwitcher.astro';
import Analytics from '../components/Analytics.astro';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<html lang={lang}>
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/x-icon" href="/favicon.ico" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<meta name="generator" content={Astro.generator} />
		<title>Telesub - {t('hero.title.main')} {t('hero.title.gradient')}</title>
		<meta name="description" content={t('hero.description')} />
		
		<style>
			* {
				margin: 0;
				padding: 0;
				box-sizing: border-box;
			}

			body {
				font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
				line-height: 1.6;
				color: #334155;
				overflow-x: hidden;
			}

			.bg-white {
				background-color: white;
			}

			.relative {
				position: relative;
			}

			.min-h-screen {
				min-height: 100vh;
			}

			.overflow-hidden {
				overflow: hidden;
			}

			/* Background Gradient */
			.background-gradient {
				position: fixed;
				top: 0;
				left: 0;
				right: 0;
				bottom: 0;
				background: linear-gradient(135deg, #e0f2fe 0%, #f0f9ff 25%, #f3e8ff 50%, #e9d5ff 75%, #f0f9ff 100%);
				opacity: 0.6;
				z-index: 0;
			}

			.background-gradient::before {
				content: '';
				position: absolute;
				top: 0;
				left: 0;
				right: 0;
				bottom: 0;
				background-image: 
					radial-gradient(circle at 25% 25%, rgba(59, 130, 246, 0.1) 0%, transparent 50%),
					radial-gradient(circle at 75% 75%, rgba(139, 92, 246, 0.1) 0%, transparent 50%);
			}

			.z-10 {
				position: relative;
				z-index: 10;
			}

			/* Container */
			.container {
				max-width: 1200px;
				margin: 0 auto;
				padding: 0 1rem;
			}

			/* Header */
			header {
				padding: 1.5rem 0;
			}

			nav {
				display: flex;
				align-items: center;
				justify-content: space-between;
			}

			.logo {
				display: flex;
				align-items: center;
				font-size: 1.5rem;
				font-weight: bold;
				color: #019aff;
				text-decoration: none;
			}

			.logo-icon {
				width: 100px;
				margin-right: 0.5rem;
				object-fit: contain;
			}

			.nav-buttons {
				display: flex;
				align-items: center;
				gap: 1rem;
			}

			.btn-signin {
				color: #475569;
				font-weight: 500;
				text-decoration: none;
				transition: color 0.3s ease;
				font-size: 0.875rem;
			}

			.btn-signin:hover {
				color: #019aff;
			}

			.btn-primary {
				background: #019aff;
				color: white;
				padding: 0.4rem 1.2rem;
				border-radius: 9999px;
				font-weight: 500;
				text-decoration: none;
				transition: all 0.3s ease;
				font-size: 0.875rem;
			}

			.btn-primary:hover {
				background: #0284c7;
				transform: translateY(-1px);
			}

			/* Hero Section */
			.hero {
				padding: 5rem 0;
				text-align: center;
			}

			.hero h1 {
				font-size: 3rem;
				font-weight: bold;
				margin-bottom: 1.5rem;
				line-height: 1.1;
			}

			.hero .title-main {
				color: #1e293b;
			}

			.hero .title-gradient {
				background: linear-gradient(to right, #019aff, #06b6d4, #0284c7);
				-webkit-background-clip: text;
				-webkit-text-fill-color: transparent;
				background-clip: text;
			}

			.hero p {
				font-size: 1.25rem;
				color: #64748b;
				margin-bottom: 2rem;
				max-width: 32rem;
				margin-left: auto;
				margin-right: auto;
				line-height: 1.7;
			}

			.btn-hero {
				display: inline-block;
				background: #019aff;
				color: white;
				padding: 1rem 2rem;
				border-radius: 9999px;
				font-size: 1.125rem;
				font-weight: 600;
				text-decoration: none;
				transition: all 0.3s ease;
				box-shadow: 0 10px 25px rgba(1, 154, 255, 0.3);
				margin-top: 2rem;
			}

			.btn-hero:hover {
				background: #0284c7;
				transform: translateY(-2px) scale(1.05);
				box-shadow: 0 20px 40px rgba(1, 154, 255, 0.4);
			}

			/* Sections */
			section {
				padding: 5rem 0;
			}

			.section-title {
				text-align: center;
				margin-bottom: 4rem;
			}

			.section-title h2 {
				font-size: 2.5rem;
				font-weight: bold;
				color: #1e293b;
				margin-bottom: 1rem;
			}

			.section-title p {
				font-size: 1.25rem;
				color: #64748b;
				max-width: 32rem;
				margin: 0 auto;
			}

			/* Features Grid */
			.features-grid {
				display: grid;
				grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
				gap: 2rem;
			}

			.feature-card {
				background: rgba(255, 255, 255, 0.7);
				backdrop-filter: blur(10px);
				border: 1px solid rgba(255, 255, 255, 0.2);
				border-radius: 1rem;
				padding: 2rem;
				box-shadow: 0 25px 50px rgba(0, 0, 0, 0.1);
				transition: all 0.3s ease;
			}

			.feature-card:hover {
				transform: translateY(-5px) scale(1.02);
				box-shadow: 0 32px 64px rgba(0, 0, 0, 0.15);
			}

			.feature-icon {
				font-size: 2.5rem;
				margin-bottom: 1rem;
			}

			.feature-card h3 {
				font-size: 1.25rem;
				font-weight: 600;
				color: #1e293b;
				margin-bottom: 0.75rem;
			}

			.feature-card p {
				color: #64748b;
				line-height: 1.7;
			}

			/* Benefits Grid */
			.benefits-grid {
				display: grid;
				grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
				gap: 2rem;
			}

			.benefit-card {
				background: rgba(15, 23, 42, 0.95);
				backdrop-filter: blur(10px);
				border: 1px solid rgba(71, 85, 105, 0.5);
				border-radius: 1rem;
				padding: 2rem;
				box-shadow: 0 25px 50px rgba(0, 0, 0, 0.25);
				transition: all 0.3s ease;
			}

			.benefit-card:hover {
				transform: translateY(-5px) scale(1.02);
				box-shadow: 0 32px 64px rgba(0, 0, 0, 0.3);
			}

			.benefit-card h3 {
				font-size: 1.5rem;
				font-weight: 600;
				color: white;
				margin-bottom: 1rem;
			}

			.benefit-card .description {
				color: #cbd5e1;
				margin-bottom: 1.5rem;
				line-height: 1.7;
			}

			.benefit-card .details {
				color: #94a3b8;
				font-size: 0.875rem;
				line-height: 1.7;
			}

			/* CTA Section */
			.cta-section {
				text-align: center;
			}

			.btn-cta {
				display: inline-block;
				background: linear-gradient(to right, #019aff, #06b6d4, #0284c7);
				color: white;
				padding: 1rem 2rem;
				border-radius: 9999px;
				font-size: 1.125rem;
				font-weight: 600;
				text-decoration: none;
				transition: all 0.3s ease;
				box-shadow: 0 20px 40px rgba(1, 154, 255, 0.3);
				margin-top: 2rem;
			}

			.btn-cta:hover {
				transform: translateY(-2px) scale(1.05);
				box-shadow: 0 32px 64px rgba(1, 154, 255, 0.4);
			}

			/* Footer */
			footer {
				border-top: 1px solid rgba(226, 232, 240, 0.5);
				padding: 3rem 0;
			}

			.footer-grid {
				display: grid;
				grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
				gap: 2rem;
				margin-bottom: 2rem;
			}

			.footer-section h4 {
				font-weight: 600;
				color: #1e293b;
				margin-bottom: 1rem;
			}

			.footer-section ul {
				list-style: none;
			}

			.footer-section ul li {
				margin-bottom: 0.5rem;
			}

			.footer-section a {
				color: #64748b;
				text-decoration: none;
				font-size: 0.875rem;
				transition: color 0.3s ease;
			}

			.footer-section a:hover {
				color: #019aff;
			}

			.footer-section p {
				color: #64748b;
				font-size: 0.875rem;
				line-height: 1.6;
			}

			.footer-bottom {
				border-top: 1px solid rgba(226, 232, 240, 0.5);
				padding-top: 2rem;
				text-align: center;
				color: #64748b;
				font-size: 0.875rem;
			}

			.footer-links {
				display: flex;
				align-items: center;
				justify-content: center;
				gap: 1rem;
				margin-bottom: 1rem;
			}

			.footer-links a {
				color: #64748b;
				text-decoration: none;
				font-size: 0.875rem;
				transition: color 0.3s ease;
			}

			.footer-links a:hover {
				color: #019aff;
			}

			.footer-links span {
				color: #94a3b8;
			}

			/* Language Switcher Mobile/Desktop Control */
			.mobile-lang-switcher {
				display: none;
				justify-content: center;
				margin-bottom: 1rem;
			}

			.desktop-lang-switcher {
				display: flex;
			}

			/* Responsive */
			@media (max-width: 768px) {
				.desktop-lang-switcher {
					display: none;
				}

				.mobile-lang-switcher {
					display: flex;
				}
				.nav-buttons {
					gap: 0.5rem;
				}

				.btn-primary {
					padding: 0.375rem 1rem;
					font-size: 0.875rem;
				}

				.hero h1 {
					font-size: 2.5rem;
				}

				.hero p {
					font-size: 1.125rem;
				}

				.section-title h2 {
					font-size: 2rem;
				}

				.features-grid,
				.benefits-grid {
					grid-template-columns: 1fr;
				}

				.footer-links {
					flex-direction: column;
					gap: 0.5rem;
				}

				.footer-links span {
					display: none;
				}
				.footer-logo-section {
					text-align: center;
				}
				.footer-logo-section img {
					margin: 0 auto;
					margin-bottom: 1rem;
				}
			}
		</style>
	</head>
	<body class="relative min-h-screen bg-white">
		<div class="background-gradient"></div>
		<div class="z-10">
			<!-- Header -->
			<header>
				<div class="container">
					<nav>
						<a href="/" class="logo">
							<img src="/blue-logo.png" alt="Telesub logo" class="logo-icon" />
						</a>
						<div class="nav-buttons">
							<div class="desktop-lang-switcher">
								<LanguageSwitcher />
							</div>
							<a href={`https://admin.telesub.app/${lang}/signin`} class="btn-signin">{t('nav.signin')}</a>
							<a href={`https://admin.telesub.app/${lang}/signup`} class="btn-primary">{t('nav.signup')}</a>
						</div>
					</nav>
				</div>
			</header>

			<!-- Hero Section -->
			<section class="hero">
				<div class="container">
					<h1>
						<span class="title-main">{t('hero.title.main')}</span>
						<br />
						<span class="title-gradient">{t('hero.title.gradient')}</span>
					</h1>
					<p>{t('hero.description')}</p>
					<a href={`https://admin.telesub.app/${lang}/signup`} class="btn-hero">{t('hero.cta')}</a>
				</div>
			</section>

			<!-- Features Section -->
			<section>
				<div class="container">
					<div class="section-title">
						<h2>{t('features.title')}</h2>
						<p>{t('features.subtitle')}</p>
					</div>

					<div class="features-grid">
						<div class="feature-card">
							<div class="feature-icon">📱</div>
							<h3>{t('feature.management.title')}</h3>
							<p>{t('feature.management.description')}</p>
						</div>
						<div class="feature-card">
							<div class="feature-icon">🔔</div>
							<h3>{t('feature.notifications.title')}</h3>
							<p>{t('feature.notifications.description')}</p>
						</div>
						<div class="feature-card">
							<div class="feature-icon">✅</div>
							<h3>{t('feature.approval.title')}</h3>
							<p>{t('feature.approval.description')}</p>
						</div>
						<div class="feature-card">
							<div class="feature-icon">📊</div>
							<h3>{t('feature.analytics.title')}</h3>
							<p>{t('feature.analytics.description')}</p>
						</div>
						<div class="feature-card">
							<div class="feature-icon">🌐</div>
							<h3>{t('feature.multilang.title')}</h3>
							<p>{t('feature.multilang.description')}</p>
						</div>
						<div class="feature-card">
							<div class="feature-icon">🔒</div>
							<h3>{t('feature.security.title')}</h3>
							<p>{t('feature.security.description')}</p>
						</div>
					</div>
				</div>
			</section>

			<!-- Benefits Section -->
			<section>
				<div class="container">
					<div class="section-title">
						<h2>{t('benefits.title')}</h2>
						<p>{t('benefits.subtitle')}</p>
					</div>

					<div class="benefits-grid">
						<div class="benefit-card">
							<h3>{t('benefit.stress.title')}</h3>
							<p class="description">{t('benefit.stress.description')}</p>
							<p class="details">{t('benefit.stress.details')}</p>
						</div>
						<div class="benefit-card">
							<h3>{t('benefit.central.title')}</h3>
							<p class="description">{t('benefit.central.description')}</p>
							<p class="details">{t('benefit.central.details')}</p>
						</div>
						<div class="benefit-card">
							<h3>{t('benefit.auto.title')}</h3>
							<p class="description">{t('benefit.auto.description')}</p>
							<p class="details">{t('benefit.auto.details')}</p>
						</div>
					</div>
				</div>
			</section>

			<!-- CTA Section -->
			<section class="cta-section">
				<div class="container">
					<h2>{t('cta.title')}</h2>
					<p>{t('cta.description')}</p>
					<a href={`https://admin.telesub.app/${lang}/signup`} class="btn-hero">{t('cta.button')}</a>
				</div>
			</section>

			<!-- Footer -->
			<footer>
				<div class="container">
					<div class="footer-grid">
						<div class="footer-section footer-logo-section">
							<a href="/" class="logo">
								<img src="/blue-logo.png" alt="Telesub logo" class="logo-icon" />
							</a>
							<p class="footer-logo-description">{t('footer.description')}</p>
						</div>
						<div class="footer-section"></div>
						<div class="footer-section"></div>
						<div class="footer-section">
							<h4>{t('footer.contact.title')}</h4>
							<p>{t('footer.contact.description')}</p>
							<a href="mailto:support@telesub.app">support@telesub.app</a>
						</div>
					</div>
					<div class="footer-bottom">
						<div class="mobile-lang-switcher">
							<LanguageSwitcher />
						</div>
						<div class="footer-links">
							<a href="/privacy">{t('footer.links.privacy')}</a>
							<span>•</span>
							<a href="/terms">{t('footer.links.terms')}</a>
						</div>
						<p>{t('footer.copyright')}</p>
					</div>
				</div>
			</footer>
		</div>

		<script>
			// Smooth scrolling for navigation links
			document.querySelectorAll('a[href^="#"]').forEach(anchor => {
				anchor.addEventListener('click', function (e) {
					e.preventDefault();
					const href = anchor.getAttribute('href');
					const target = href ? document.querySelector(href) : null;
					if (target) {
						target.scrollIntoView({
							behavior: 'smooth',
							block: 'start'
						});
					}
				});
			});
		</script>
		
		<Analytics />
	</body>
</html>
